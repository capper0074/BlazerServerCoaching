@code {

	public static class Rounds
	{

		public static int TotalTRounds{ get; set; }

		public static int TotalCTRounds { get; set; }



		public static void UpdateTotal()
		{
			TotalTRounds += 1;

			TotalCTRounds += 1;
		}


	
	}


	

}
